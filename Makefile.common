dep: $(DEPFILES)
clean:
	rm -f $(HTMLFILES) $(DEPFILES)
	for sub in $(SUBDIRS); do \
		$(MAKE) -C "$$sub" WMLBASE=../$(WMLBASE) clean; \
	done

include $(DEPFILES)
